{
	"name": "hydra-svg-js",
	"version": "0.0.45",
	"description": "Hydrate SVG tags with icons from your favorite libraries",
	"scripts": {
		"prepublishOnly": "yarn dist",
		"gen": "node config/generatePacks.js",
		"dist": "npm run gen && rollup -c config/rollup.config.js",
		"test": "mocha \"./test/**/**.test.js\" --recursive --require @babel/register"
	},
	"type": "module",
	"main": "dist/hydrate.cjs",
	"module": "dist/hydrate.mjs",
	"exports": {
		".": {
			"import": "./dist/hydrate.mjs",
			"require": "./dist/hydrate.cjs"
		},
		"./packs/*": "./dist/packs/*",
		"./purge": {
			"import": "./dist/purge.mjs",
			"require": "./dist/purge.cjs"
		},
		"./generate": {
			"import": "./dist/generate.mjs",
			"require": "./dist/generate.cjs"
		},
		"./observe": {
			"import": "./dist/observe.mjs",
			"require": "./dist/observe.cjs"
		},
		"./utils/*": {
			"import": "./dist/utils/*.mjs",
			"require": "./dist/utils/*.cjs"
		},
		"./exts/*": {
			"import": "./dist/exts/*.mjs",
			"require": "./dist/exts/*.cjs"
		},
		"./plugs/*": {
			"import": "./dist/plugs/*.mjs",
			"require": "./dist/plugs/*.cjs"
		}
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"author": "Michael Garcia",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hydra-svg-js/hydra-svg-js.git"
	},
	"bugs": {
		"url": "https://github.com/hydra-svg-js/hydra-svg-js/issues"
	},
	"homepage": "https://github.com/hydra-svg-js/hydra-svg-js#readme",
	"keywords": [
		"hydra-svg",
		"hyrdra",
		"hydrate",
		"svg",
		"icons",
		"heroicons",
		"fontawesome"
	],
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.6",
		"@babel/preset-env": "^7.14.7",
		"@babel/register": "^7.14.5",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^19.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.0",
		"chai": "^4.3.4",
		"colors": "^1.4.0",
		"core-js": "^3.15.2",
		"mocha": "^9.0.1",
		"rollup": "^2.52.4",
		"rollup-plugin-node-polyfills": "^0.2.1",
		"rollup-plugin-terser": "^7.0.2"
	},
	"dependencies": {
		"fast-glob": "^3.2.6",
		"jsdom": "^16.6.0",
		"svgo": "^2.3.1"
	}
}
