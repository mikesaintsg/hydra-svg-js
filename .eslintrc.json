{
	"env": {
		"es2020": true,
		"mocha": true,
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"document": "readonly",
		"window": "readonly",
		"expect": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "should|expect"
			}
		],
		"no-multiple-empty-lines": "warn",
		"no-var": "error",
		"prefer-const": "error",
		"no-useless-escape": "off"
	}
}
